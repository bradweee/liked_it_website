<h1>Users</h1>
<%= link_to 'New Users', new_user_path %>
<table>
    <tr>
        <th>Username</th>
        <th>Admin Status</th>
    </tr>

    <% @users.each do |user| %>
        <tr>
            <td><%= user.username %></td>
            <td>
                <% if current_user %>
                    Admin: <strong><%= current_user.admin? %></strong><br>
                    <%= link_to 'Toggle admin rights', users_path(current_user), method: :patch, class: 'btn btn-info' %>
                <% end %>                
            </td>
            <td><%= link_to 'Show', user_path(user) %></td>
        </tr>
    <% end %>
</table>